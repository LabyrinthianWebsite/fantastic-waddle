<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= artist.name %> - Artists - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="icon" type="image/x-icon" href="/public/icons/favicon.ico">
</head>
<body class="dark-theme">
    <nav class="navbar">
        <div class="navbar-container">
            <div class="navbar-brand">
                <a href="/">CommissionDB</a>
            </div>
            
            <div class="navbar-menu">
                <a href="/" class="navbar-item">Browse</a>
                <a href="/characters" class="navbar-item">Characters</a>
                <a href="/upper-campus" class="navbar-item">Upper Campus</a>
                <a href="/artists" class="navbar-item active">Artists</a>
                <a href="/collections" class="navbar-item">Collections</a>
                <a href="/tags" class="navbar-item">Tags</a>
                <a href="/stats" class="navbar-item">Stats</a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <button class="btn btn-ghost" id="theme-toggle" aria-label="Toggle theme">
                        <span class="theme-icon">üåô</span>
                    </button>
                </div>
                
                <div class="navbar-item">
                    <button class="btn btn-ghost" id="safe-mode-toggle" aria-label="Toggle safe mode">
                        <span class="safe-mode-icon">üîí</span>
                    </button>
                </div>

                <div class="navbar-item">
                    <a href="/admin" class="btn btn-solid">Admin</a>
                </div>

                <div class="navbar-item">
                    <button class="btn btn-ghost" id="keyboard-help" aria-label="Keyboard shortcuts">
                        <span>?</span>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <main class="main">
        <div class="container">
            <!-- Breadcrumb -->
            <nav class="breadcrumb">
                <a href="/">Home</a>
                <span class="breadcrumb-separator">‚Ä∫</span>
                <a href="/artists">Artists</a>
                <span class="breadcrumb-separator">‚Ä∫</span>
                <span class="breadcrumb-current"><%= artist.name %></span>
            </nav>

            <!-- Artist Header -->
            <div class="artist-header">
                <div class="artist-title">
                    <h1><%= artist.name %></h1>
                </div>
                
                <div class="artist-stats">
                    <div class="stat-item">
                        <span class="stat-number"><%= stats.totalCommissions %></span>
                        <span class="stat-label">Commission<%= stats.totalCommissions !== 1 ? 's' : '' %></span>
                    </div>
                    <% if (stats.avgScore > 0) { %>
                        <div class="stat-item">
                            <span class="stat-number">‚≠ê <%= stats.avgScore %></span>
                            <span class="stat-label">Avg Score</span>
                        </div>
                    <% } %>
                </div>

                <% if (artist.description) { %>
                    <div class="artist-description">
                        <p><%= artist.description %></p>
                    </div>
                <% } %>

                <% if (artist.website_url) { %>
                    <div class="artist-links">
                        <a href="<%= artist.website_url %>" target="_blank" rel="noopener noreferrer" class="btn btn-ghost">
                            Visit Website ‚Üó
                        </a>
                    </div>
                <% } %>
            </div>

            <!-- Recent Commissions Info -->
            <% if (stats.recentCommissions.length > 0) { %>
                <div class="recent-commissions-summary">
                    <h3>Recent Work</h3>
                    <div class="recent-commissions-list">
                        <% stats.recentCommissions.forEach(commission => { %>
                            <div class="recent-commission-item">
                                <a href="/c/<%= commission.slug %>" class="commission-link">
                                    <%= commission.title %>
                                </a>
                                <% if (commission.score) { %>
                                    <span class="commission-score">‚≠ê <%= commission.score %></span>
                                <% } %>
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% } %>

            <!-- Commissions Section -->
            <div class="section-header">
                <h2>All Commissions by <%= artist.name %></h2>
                <div class="section-meta">
                    <%= pagination.count %> commission<%= pagination.count !== 1 ? 's' : '' %>
                </div>
            </div>

            <% if (commissions.length === 0) { %>
                <div class="empty-state">
                    <h3>No Commissions</h3>
                    <p>This artist hasn't been credited with any commissions yet.</p>
                </div>
            <% } else { %>
                <!-- Commissions Grid -->
                <div class="commissions-grid">
                    <% commissions.forEach(commission => { %>
                        <div class="commission-card" data-nsfw="<%= commission.nsfw ? 'true' : 'false' %>">
                            <a href="/c/<%= commission.slug %>" class="commission-link">
                                <div class="commission-image">
                                    <img 
                                        src="<%= commission.thumb_url %>" 
                                        alt="<%= commission.title %>"
                                        class="commission-thumb <% if (commission.nsfw) { %>nsfw-content<% } %>"
                                        loading="lazy"
                                    >
                                    <% if (commission.nsfw) { %>
                                        <div class="nsfw-overlay">NSFW</div>
                                    <% } %>
                                </div>
                                
                                <div class="commission-info">
                                    <h3 class="commission-title"><%= commission.title %></h3>
                                    
                                    <div class="commission-meta">
                                        <% if (commission.formatted_date) { %>
                                            <span class="commission-date"><%= commission.formatted_date %></span>
                                        <% } %>
                                        <% if (commission.score) { %>
                                            <span class="commission-score">‚≠ê <%= commission.score %></span>
                                        <% } %>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                </div>

                <!-- Pagination -->
                <% if (pagination.totalPages > 1) { %>
                    <div class="pagination">
                        <% if (pagination.hasPrev) { %>
                            <a href="?page=<%= pagination.currentPage - 1 %>" class="btn btn-ghost">‚Üê Previous</a>
                        <% } %>
                        
                        <span class="pagination-info">
                            Page <%= pagination.currentPage %> of <%= pagination.totalPages %>
                        </span>
                        
                        <% if (pagination.hasNext) { %>
                            <a href="?page=<%= pagination.currentPage + 1 %>" class="btn btn-ghost">Next ‚Üí</a>
                        <% } %>
                    </div>
                <% } %>
            <% } %>
        </div>
    </main>

    <!-- Scripts -->
    <script src="/public/js/app.js"></script>

    <style>
        .artist-header {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .artist-title h1 {
            color: var(--primary);
            font-size: 2.5rem;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .artist-stats {
            display: flex;
            gap: 2rem;
            margin-bottom: 1.5rem;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            display: block;
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 0.25rem;
        }

        .stat-label {
            font-size: 0.9rem;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .artist-description {
            color: var(--text-secondary);
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .artist-links {
            display: flex;
            gap: 1rem;
        }

        .recent-commissions-summary {
            background: var(--bg-secondary);
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .recent-commissions-summary h3 {
            color: var(--text);
            margin-bottom: 1rem;
            font-size: 1.2rem;
        }

        .recent-commissions-list {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .recent-commission-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.5rem 0;
        }

        .recent-commission-item .commission-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        .recent-commission-item .commission-link:hover {
            color: var(--secondary);
        }

        .recent-commission-item .commission-score {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border);
        }

        .section-header h2 {
            color: var(--text);
            margin: 0;
        }

        .section-meta {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .commissions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 2rem;
            padding: 2rem 0;
        }

        .pagination-info {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            .artist-title h1 {
                font-size: 2rem;
            }

            .artist-stats {
                justify-content: center;
                gap: 1.5rem;
            }

            .section-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }

            .commissions-grid {
                grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
                gap: 1rem;
            }

            .pagination {
                flex-direction: column;
                gap: 1rem;
            }
        }
    </style>
</body>
</html>