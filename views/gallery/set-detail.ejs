<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header */
        header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: bold;
            color: #667eea;
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 2rem;
        }

        .nav-links a {
            text-decoration: none;
            color: #333;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: #667eea;
        }

        /* Main Content */
        main {
            padding: 2rem 0;
        }

        .breadcrumb {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 2rem;
        }

        .breadcrumb a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
        }

        .breadcrumb a:hover {
            color: white;
        }

        /* Set Header */
        .set-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .set-info {
            display: grid;
            grid-template-columns: auto 1fr auto;
            gap: 2rem;
            align-items: center;
        }

        .set-icon {
            width: 80px;
            height: 80px;
            border-radius: 15px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
        }

        .set-details h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .set-meta {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .set-description {
            color: #555;
            line-height: 1.6;
        }

        .set-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
            gap: 1rem;
            text-align: center;
        }

        .stat-item {
            background: rgba(102, 126, 234, 0.1);
            padding: 1rem;
            border-radius: 10px;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #667eea;
        }

        .stat-label {
            color: #666;
            font-size: 0.9rem;
        }

        /* Tags Section */
        .tags-section {
            margin-bottom: 2rem;
        }

        .tags-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 1.5rem 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .tags-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #333;
        }

        .tags-list {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .tag {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        /* Media Grid */
        .media-section {
            margin-top: 2rem;
        }

        .section-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px 15px 0 0;
            padding: 1.5rem 2rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .section-title {
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
            color: #333;
        }

        .section-subtitle {
            color: #666;
        }

        .media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 0 0 15px 15px;
        }

        .media-item {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .media-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .media-preview {
            width: 100%;
            height: 200px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            position: relative;
        }

        .media-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .media-type-indicator {
            position: absolute;
            top: 0.5rem;
            right: 0.5rem;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
        }

        .media-info {
            padding: 1rem;
        }

        .media-filename {
            font-weight: 500;
            margin-bottom: 0.5rem;
            word-break: break-word;
        }

        .media-meta {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .media-actions {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-block;
            margin-top: 0.5rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        /* Empty State */
        .empty-state {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 4rem 2rem;
            text-align: center;
            color: #666;
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .set-info {
                grid-template-columns: 1fr;
                text-align: center;
                gap: 1rem;
            }

            .set-stats {
                grid-template-columns: repeat(2, 1fr);
            }

            .media-grid {
                grid-template-columns: 1fr;
            }

            .nav-links {
                display: none;
            }

            .tags-list {
                justify-content: center;
            }
        }

        /* Lightbox styles */
        .lightbox {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            z-index: 1000;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .lightbox.active {
            display: flex;
            opacity: 1;
            align-items: center;
            justify-content: center;
        }

        .lightbox-content {
            position: relative;
            max-width: 90%;
            max-height: 90%;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .lightbox-image {
            width: 100%;
            height: auto;
            max-height: 80vh;
            object-fit: contain;
            display: block;
        }

        .lightbox-info {
            padding: 1rem;
            background: white;
            border-top: 1px solid #eee;
        }

        .lightbox-filename {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #333;
        }

        .lightbox-meta {
            color: #666;
            font-size: 0.9rem;
        }

        .lightbox-close {
            position: absolute;
            top: 10px;
            right: 15px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-size: 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.3s ease;
            z-index: 1001;
        }

        .lightbox-close:hover {
            background: rgba(0, 0, 0, 0.9);
        }

        .lightbox-nav {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.7);
            color: white;
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            font-size: 24px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.3s ease;
            z-index: 1001;
        }

        .lightbox-nav:hover {
            background: rgba(0, 0, 0, 0.9);
        }

        .lightbox-nav:disabled {
            opacity: 0.3;
            cursor: not-allowed;
        }

        .lightbox-prev {
            left: 20px;
        }

        .lightbox-next {
            right: 20px;
        }

        .lightbox-counter {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 14px;
            z-index: 1001;
        }

        /* Media item hover effect for clickable indication */
        .media-item {
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .media-item:hover .media-preview {
            transform: scale(1.02);
        }
    </style>
</head>
<body>
    <header>
        <nav class="container">
            <a href="/" class="logo">Gallery Suite</a>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/studios">Studios</a></li>
                <li><a href="/models">Sites/Models</a></li>
                <li><a href="/sets">Sets</a></li>
            </ul>
        </nav>
    </header>

    <main class="container">
        <div class="breadcrumb">
            <a href="/">Home</a> › 
            <a href="/sets">Sets</a> › 
            <%= set.name %>
        </div>

        <div class="set-header">
            <div class="set-info">
                <div class="set-icon">
                    📸
                </div>
                <div class="set-details">
                    <h1><%= set.name %></h1>
                    <div class="set-meta">
                        <% if (set.model_name) { %>
                            Model: <a href="/models/<%= set.model_slug %>"><%= set.model_name %></a>
                        <% } %>
                        <% if (set.studio_name) { %>
                            • Studio: <a href="/studios/<%= set.studio_slug %>"><%= set.studio_name %></a>
                        <% } %>
                        <% if (set.created_at) { %>
                            • Created <%= new Date(set.created_at).toLocaleDateString() %>
                        <% } %>
                    </div>
                    <% if (set.description) { %>
                        <div class="set-description">
                            <%= set.description %>
                        </div>
                    <% } %>
                </div>
                <div class="set-stats">
                    <div class="stat-item">
                        <div class="stat-number"><%= media ? media.length : 0 %></div>
                        <div class="stat-label">Media</div>
                    </div>
                    <% if (tags && tags.length > 0) { %>
                        <div class="stat-item">
                            <div class="stat-number"><%= tags.length %></div>
                            <div class="stat-label">Tags</div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <% if (tags && tags.length > 0) { %>
            <div class="tags-section">
                <div class="tags-container">
                    <h3 class="tags-title">Tags</h3>
                    <div class="tags-list">
                        <% tags.forEach(tag => { %>
                            <span class="tag"><%= tag.name %></span>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% } %>

        <div class="media-section">
            <% if (media && media.length > 0) { %>
                <div class="section-header">
                    <h2 class="section-title">Media</h2>
                    <p class="section-subtitle">Browse all media in this set</p>
                </div>
                <div class="media-grid">
                    <% media.forEach((item, index) => { %>
                        <div class="media-item" 
                             onclick="openLightbox(<%= index %>)" 
                             data-index="<%= index %>"
                             data-filename="<%= item.filename || 'Untitled' %>"
                             data-full-path="/<%= item.display_path %>"
                             data-thumb-path="/<%= item.thumb_path || item.display_path %>"
                             data-file-type="<%= item.file_type %>"
                             data-file-size="<%= item.filesize ? Math.round(item.filesize / 1024) : '' %>"
                             data-created="<%= item.created_at ? new Date(item.created_at).toLocaleDateString() : '' %>">
                            <div class="media-preview">
                                <% if (item.thumb_path || item.display_path) { %>
                                    <img src="/<%= item.thumb_path || item.display_path %>" alt="<%= item.filename || 'Media item' %>" loading="lazy">
                                <% } else { %>
                                    🎬 <%= item.filename || 'Media' %>
                                <% } %>
                                <% if (item.file_type) { %>
                                    <div class="media-type-indicator">
                                        <%= item.file_type.toUpperCase() %>
                                    </div>
                                <% } %>
                            </div>
                            <div class="media-info">
                                <div class="media-filename"><%= item.filename || 'Untitled' %></div>
                                <div class="media-meta">
                                    <% if (item.filesize) { %>
                                        Size: <%= Math.round(item.filesize / 1024) %> KB
                                    <% } %>
                                    <% if (item.created_at) { %>
                                        • <%= new Date(item.created_at).toLocaleDateString() %>
                                    <% } %>
                                </div>
                                <div class="media-actions">
                                    <button onclick="event.stopPropagation(); openLightbox(<%= index %>)" class="btn btn-primary">View</button>
                                    <% if (item.display_path) { %>
                                        <a href="/<%= item.display_path %>" class="btn btn-primary" target="_blank" onclick="event.stopPropagation()">Download</a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-icon">📸</div>
                    <h3>No Media Yet</h3>
                    <p>No photos or videos have been added to this set yet.</p>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Lightbox Modal -->
    <div id="lightbox" class="lightbox">
        <div class="lightbox-content">
            <button class="lightbox-close" onclick="closeLightbox()">&times;</button>
            <button class="lightbox-nav lightbox-prev" onclick="navigateLightbox(-1)">&#8249;</button>
            <button class="lightbox-nav lightbox-next" onclick="navigateLightbox(1)">&#8250;</button>
            <img id="lightbox-image" class="lightbox-image" src="" alt="">
            <div class="lightbox-info">
                <div id="lightbox-filename" class="lightbox-filename"></div>
                <div id="lightbox-meta" class="lightbox-meta"></div>
            </div>
            <div id="lightbox-counter" class="lightbox-counter"></div>
        </div>
    </div>

    <script>
        let currentImageIndex = 0;
        let mediaItems = [];

        // Initialize media items data from the page
        document.addEventListener('DOMContentLoaded', function() {
            const mediaElements = document.querySelectorAll('.media-item[data-index]');
            mediaItems = Array.from(mediaElements).map(el => ({
                index: parseInt(el.dataset.index),
                filename: el.dataset.filename,
                fullPath: el.dataset.fullPath,
                thumbPath: el.dataset.thumbPath,
                fileType: el.dataset.fileType,
                fileSize: el.dataset.fileSize,
                created: el.dataset.created
            }));
        });

        function openLightbox(index) {
            if (index < 0 || index >= mediaItems.length) return;
            
            currentImageIndex = index;
            const item = mediaItems[index];
            
            const lightbox = document.getElementById('lightbox');
            const image = document.getElementById('lightbox-image');
            const filename = document.getElementById('lightbox-filename');
            const meta = document.getElementById('lightbox-meta');
            const counter = document.getElementById('lightbox-counter');
            const prevBtn = document.querySelector('.lightbox-prev');
            const nextBtn = document.querySelector('.lightbox-next');
            
            // Set image and content
            image.src = item.fullPath;
            image.alt = item.filename;
            filename.textContent = item.filename;
            
            // Set meta information
            let metaText = '';
            if (item.fileSize) metaText += `Size: ${item.fileSize} KB`;
            if (item.created) metaText += (metaText ? ' • ' : '') + item.created;
            if (item.fileType) metaText += (metaText ? ' • ' : '') + item.fileType.toUpperCase();
            meta.textContent = metaText;
            
            // Set counter
            counter.textContent = `${index + 1} of ${mediaItems.length}`;
            
            // Update navigation buttons
            prevBtn.disabled = index === 0;
            nextBtn.disabled = index === mediaItems.length - 1;
            
            // Show lightbox
            lightbox.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeLightbox() {
            const lightbox = document.getElementById('lightbox');
            lightbox.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function navigateLightbox(direction) {
            const newIndex = currentImageIndex + direction;
            if (newIndex >= 0 && newIndex < mediaItems.length) {
                openLightbox(newIndex);
            }
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            const lightbox = document.getElementById('lightbox');
            if (!lightbox.classList.contains('active')) return;
            
            switch(e.key) {
                case 'Escape':
                    closeLightbox();
                    break;
                case 'ArrowLeft':
                    navigateLightbox(-1);
                    break;
                case 'ArrowRight':
                    navigateLightbox(1);
                    break;
            }
        });

        // Close lightbox when clicking outside the content
        document.getElementById('lightbox').addEventListener('click', function(e) {
            if (e.target === this) {
                closeLightbox();
            }
        });
    </script>
</body>
</html>