<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= novel.title %> - Novels - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <div class="navbar-brand">
                <a href="/">CommissionDB</a>
            </div>
            
            <div class="navbar-menu">
                <a href="/" class="navbar-item">Commissions</a>
                <a href="/novels" class="navbar-item active">Novels</a>
                <a href="/characters" class="navbar-item">Characters</a>
                <a href="/artists" class="navbar-item">Artists</a>
                <a href="/collections" class="navbar-item">Collections</a>
                <a href="/tags" class="navbar-item">Tags</a>
                <a href="/stats" class="navbar-item">Stats</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <!-- Back Navigation -->
            <div class="breadcrumb">
                <a href="/novels">← Back to Novels</a>
            </div>

            <!-- Novel Header -->
            <div class="novel-header">
                <h1 class="novel-title">
                    <%= novel.title %>
                    <% if (novel.nsfw) { %>
                        <span class="nsfw-badge">NSFW</span>
                    <% } %>
                </h1>

                <div class="novel-meta">
                    <div class="meta-item">
                        <strong>Date:</strong> <%= novel.formatted_date %>
                    </div>
                    <% if (novel.artist_name) { %>
                        <div class="meta-item">
                            <strong>Artist:</strong> <a href="/artists/<%= novel.artist_slug %>"><%= novel.artist_name %></a>
                        </div>
                    <% } %>
                    <% if (novel.collection_name) { %>
                        <div class="meta-item">
                            <strong>Collection:</strong> <a href="/collections/<%= novel.collection_slug %>"><%= novel.collection_name %></a>
                        </div>
                    <% } %>
                    <div class="meta-item">
                        <strong>Words:</strong> <%= novel.word_count ? novel.word_count.toLocaleString() : '0' %>
                    </div>
                    <div class="meta-item">
                        <strong>Score:</strong> <%= novel.score || 0 %>/100
                    </div>
                    <% if (novel.price) { %>
                        <div class="meta-item">
                            <strong>Price:</strong> $<%= novel.price %>
                        </div>
                    <% } %>
                </div>

                <% if (novel.description) { %>
                    <div class="novel-description">
                        <%= novel.description %>
                    </div>
                <% } %>

                <!-- Language Selector -->
                <div class="language-selector">
                    <% if (novel.original_content) { %>
                        <button class="language-btn active" data-language="original">
                            <%= novel.original_language.toUpperCase() %>
                            <% if (novel.original_title) { %>
                                - <%= novel.original_title %>
                            <% } %>
                        </button>
                    <% } %>
                    <% if (novel.translated_content) { %>
                        <button class="language-btn" data-language="translated">
                            <%= novel.translated_language.toUpperCase() %>
                            <% if (novel.translated_title) { %>
                                - <%= novel.translated_title %>
                            <% } %>
                        </button>
                    <% } %>
                </div>
            </div>

            <!-- Novel Content -->
            <div class="novel-content">
                <% if (novel.original_content) { %>
                    <div class="text-version active" id="original-text">
                        <% if (novel.original_title && novel.original_title !== novel.title) { %>
                            <h2 class="text-title"><%= novel.original_title %></h2>
                        <% } %>
                        <div class="text-content">
                            <%- novel.original_content.replace(/\n/g, '<br>') %>
                        </div>
                    </div>
                <% } %>

                <% if (novel.translated_content) { %>
                    <div class="text-version" id="translated-text">
                        <% if (novel.translated_title && novel.translated_title !== novel.title) { %>
                            <h2 class="text-title"><%= novel.translated_title %></h2>
                        <% } %>
                        <div class="text-content">
                            <%- novel.translated_content.replace(/\n/g, '<br>') %>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Tags and Characters -->
            <% if (tags.length > 0 || characters.length > 0) { %>
                <div class="novel-metadata">
                    <% if (tags.length > 0) { %>
                        <div class="metadata-section">
                            <h3>Tags</h3>
                            <div class="tag-list">
                                <% tags.forEach(tag => { %>
                                    <a href="/tags/<%= tag.slug %>" class="tag-item"># <%= tag.name %></a>
                                <% }); %>
                            </div>
                        </div>
                    <% } %>

                    <% if (characters.length > 0) { %>
                        <div class="metadata-section">
                            <h3>Characters</h3>
                            <div class="character-list">
                                <% characters.forEach(character => { %>
                                    <a href="/characters/<%= character.slug %>" class="character-item">
                                        <% if (character.portrait_thumb_path) { %>
                                            <img src="/uploads/<%= character.portrait_thumb_path %>" alt="<%= character.name %>" class="character-thumb">
                                        <% } %>
                                        <span><%= character.name %></span>
                                    </a>
                                <% }); %>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>

            <!-- Related Novels -->
            <% if (relatedNovels.length > 0) { %>
                <div class="related-novels">
                    <h3>More from this Collection</h3>
                    <div class="related-grid">
                        <% relatedNovels.forEach(relatedNovel => { %>
                            <a href="/novels/<%= relatedNovel.slug %>" class="related-item">
                                <h4><%= relatedNovel.title %></h4>
                                <div class="related-meta">
                                    <%= relatedNovel.formatted_date %>
                                    <% if (relatedNovel.word_count) { %>
                                        • <%= relatedNovel.word_count.toLocaleString() %> words
                                    <% } %>
                                </div>
                            </a>
                        <% }); %>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <style>
        .breadcrumb {
            margin-bottom: 2rem;
        }

        .breadcrumb a {
            color: var(--accent);
            text-decoration: none;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        .novel-header {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow);
        }

        .novel-title {
            margin: 0 0 1rem 0;
            font-size: 2.5rem;
            line-height: 1.2;
            color: var(--text-primary);
        }

        .nsfw-badge {
            background-color: #dc2626;
            color: white;
            padding: 4px 8px;
            border-radius: 8px;
            font-size: 0.6em;
            font-weight: bold;
            margin-left: 1rem;
            vertical-align: middle;
        }

        .novel-meta {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
            padding: 1rem;
            background: var(--bg-secondary);
            border-radius: 8px;
        }

        .meta-item {
            font-size: 0.9rem;
        }

        .meta-item strong {
            color: var(--text-secondary);
        }

        .meta-item a {
            color: var(--accent);
            text-decoration: none;
        }

        .meta-item a:hover {
            text-decoration: underline;
        }

        .novel-description {
            font-size: 1.1rem;
            line-height: 1.6;
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
            padding: 1rem;
            background: var(--bg-secondary);
            border-radius: 8px;
            border-left: 4px solid var(--accent);
        }

        .language-selector {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .language-btn {
            padding: 0.75rem 1.5rem;
            background: var(--bg-secondary);
            border: 2px solid var(--border);
            border-radius: 8px;
            color: var(--text-primary);
            cursor: pointer;
            transition: all 0.2s ease;
            font-weight: bold;
        }

        .language-btn:hover,
        .language-btn.active {
            background: var(--accent);
            color: white;
            border-color: var(--accent);
        }

        .novel-content {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 3rem;
            margin: 2rem 0;
            box-shadow: var(--shadow);
            min-height: 400px;
        }

        .text-version {
            display: none;
        }

        .text-version.active {
            display: block;
        }

        .text-title {
            margin: 0 0 2rem 0;
            font-size: 1.8rem;
            color: var(--text-primary);
            text-align: center;
            border-bottom: 2px solid var(--border);
            padding-bottom: 1rem;
        }

        .text-content {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--text-primary);
            font-family: ui-serif, 'Charter', 'Bitstream Charter', 'Sitka Text', 'Cambria', 'Liberation Serif', 'Times New Roman', serif;
            text-align: justify;
            max-width: 800px;
            margin: 0 auto;
        }

        .novel-metadata {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            margin: 2rem 0;
            box-shadow: var(--shadow);
        }

        .metadata-section {
            margin-bottom: 2rem;
        }

        .metadata-section:last-child {
            margin-bottom: 0;
        }

        .metadata-section h3 {
            margin: 0 0 1rem 0;
            color: var(--text-primary);
            border-bottom: 2px solid var(--border);
            padding-bottom: 0.5rem;
        }

        .tag-list {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .tag-item {
            padding: 0.5rem 1rem;
            background: var(--bg-secondary);
            border: 1px solid var(--border);
            border-radius: 20px;
            color: var(--accent);
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.2s ease;
        }

        .tag-item:hover {
            background: var(--accent);
            color: white;
            border-color: var(--accent);
        }

        .character-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
        }

        .character-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: var(--bg-secondary);
            border: 1px solid var(--border);
            border-radius: 8px;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .character-item:hover {
            background: var(--accent);
            color: white;
            border-color: var(--accent);
        }

        .character-thumb {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .related-novels {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            margin: 2rem 0;
            box-shadow: var(--shadow);
        }

        .related-novels h3 {
            margin: 0 0 1.5rem 0;
            color: var(--text-primary);
            border-bottom: 2px solid var(--border);
            padding-bottom: 0.5rem;
        }

        .related-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1rem;
        }

        .related-item {
            padding: 1.5rem;
            background: var(--bg-secondary);
            border: 1px solid var(--border);
            border-radius: 8px;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .related-item:hover {
            background: var(--accent);
            color: white;
            border-color: var(--accent);
            transform: translateY(-2px);
        }

        .related-item h4 {
            margin: 0 0 0.5rem 0;
            font-size: 1.1rem;
        }

        .related-meta {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .navbar-item.active {
            color: var(--accent);
            font-weight: bold;
        }

        @media (max-width: 768px) {
            .novel-title {
                font-size: 2rem;
            }

            .novel-meta {
                grid-template-columns: 1fr;
            }

            .novel-content {
                padding: 2rem 1.5rem;
            }

            .text-content {
                text-align: left;
            }

            .character-list {
                grid-template-columns: 1fr;
            }

            .related-grid {
                grid-template-columns: 1fr;
            }

            .language-selector {
                flex-direction: column;
            }
        }
    </style>

    <script>
        // Language switching functionality
        document.addEventListener('DOMContentLoaded', function() {
            const languageBtns = document.querySelectorAll('.language-btn');
            const textVersions = document.querySelectorAll('.text-version');

            languageBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const targetLanguage = this.dataset.language;
                    
                    // Update button states
                    languageBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Update text versions
                    textVersions.forEach(version => {
                        version.classList.remove('active');
                    });
                    
                    const targetVersion = document.getElementById(targetLanguage + '-text');
                    if (targetVersion) {
                        targetVersion.classList.add('active');
                    }
                });
            });
        });
    </script>

    <script src="/public/js/app.js"></script>
</body>
</html>