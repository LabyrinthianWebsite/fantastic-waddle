<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collections - Admin - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body class="dark-theme">
    <nav class="admin-navbar">
        <div class="admin-navbar-container">
            <div class="admin-navbar-brand">
                <a href="/admin">CommissionDB Admin</a>
            </div>
            
            <div class="admin-navbar-menu">
                <a href="/admin" class="admin-navbar-item">Dashboard</a>
                <a href="/admin/commissions" class="admin-navbar-item">Commissions</a>
                <a href="/admin/characters" class="admin-navbar-item">Characters</a>
                <a href="/admin/upper-campus" class="admin-navbar-item">Upper Campus</a>
                <a href="/admin/artists" class="admin-navbar-item">Artists</a>
                <a href="/admin/tags" class="admin-navbar-item">Tags</a>
                <a href="/admin/collections" class="admin-navbar-item active">Collections</a>
            </div>

            <div class="admin-navbar-end">
                <div class="admin-navbar-item">
                    <span>Welcome, <%= user.username %></span>
                </div>
                <div class="admin-navbar-item">
                    <a href="/" class="btn btn-ghost">View Site</a>
                </div>
                <div class="admin-navbar-item">
                    <form method="POST" action="/admin/logout" style="display: inline;">
                        <button type="submit" class="btn btn-ghost">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="admin-main">
        <div class="admin-container">
            <div class="admin-header">
                <h1>Collections</h1>
                <div class="admin-header-actions">
                    <a href="/admin/collections/new" class="btn btn-solid">+ Add Collection</a>
                </div>
            </div>

            <div class="admin-content">
                <% if (collections.length === 0) { %>
                    <div class="empty-state">
                        <h3>No Collections Yet</h3>
                        <p>Collections help group related commissions together.</p>
                        <a href="/admin/collections/new" class="btn btn-solid">Create Your First Collection</a>
                    </div>
                <% } else { %>
                    <div class="admin-grid">
                        <% collections.forEach(collection => { %>
                            <div class="admin-card collection-card">
                                <% if (collection.cover_image_thumb_path) { %>
                                    <div class="collection-cover">
                                        <img src="/uploads/<%= collection.cover_image_thumb_path %>" 
                                             alt="<%= collection.name %> cover" 
                                             class="cover-image">
                                    </div>
                                <% } %>
                                
                                <div class="collection-info">
                                    <h3 class="collection-name"><%= collection.name %></h3>
                                    
                                    <% if (collection.description) { %>
                                        <p class="collection-description">
                                            <%= collection.description.length > 100 ? 
                                                collection.description.substring(0, 100) + '...' : 
                                                collection.description %>
                                        </p>
                                    <% } %>
                                    
                                    <div class="collection-meta">
                                        <span class="slug">Slug: <%= collection.slug %></span>
                                        <% if (collection.created_at) { %>
                                            <span class="created-date">Added: <%= new Date(collection.created_at).toLocaleDateString() %></span>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <div class="collection-actions">
                                    <a href="/admin/collections/<%= collection.id %>/edit" class="btn btn-ghost btn-sm">Edit</a>
                                    <form method="POST" action="/admin/collections/<%= collection.id %>/delete" style="display: inline;" 
                                          onsubmit="return confirm('Are you sure you want to delete this collection? This action cannot be undone.')">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="/public/js/app.js"></script>
    <script src="/public/js/admin.js"></script>

    <style>
    .collection-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 0;
        overflow: hidden;
    }

    .collection-cover {
        width: 100%;
        height: 150px;
        overflow: hidden;
        background: var(--bg-secondary);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .cover-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .collection-info {
        flex: 1;
        padding: 1.5rem;
        padding-bottom: 0;
    }

    .collection-name {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--primary);
    }

    .collection-description {
        color: var(--text-secondary);
        margin-bottom: 0.8rem;
        line-height: 1.4;
    }

    .collection-meta {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        font-size: 0.85rem;
        color: var(--text-secondary);
        margin-bottom: 1rem;
    }

    .slug {
        font-family: monospace;
        background: var(--bg-secondary);
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        width: fit-content;
    }

    .collection-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
        border-top: 1px solid var(--border);
        padding: 1rem 1.5rem;
    }

    .btn-sm {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
    }

    .btn-danger {
        background: #dc3545;
        color: white;
        border: none;
    }

    .btn-danger:hover {
        background: #c82333;
    }

    @media (max-width: 768px) {
        .admin-grid {
            grid-template-columns: 1fr;
        }
        
        .collection-actions {
            flex-direction: column;
        }
    }
    </style>
</body>
</html>