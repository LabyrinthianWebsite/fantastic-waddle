<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Commissions - Admin - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body class="dark-theme">
    <nav class="admin-navbar">
        <div class="admin-navbar-container">
            <div class="admin-navbar-brand">
                <a href="/admin">CommissionDB Admin</a>
            </div>
            
            <div class="admin-navbar-menu">
                <a href="/admin" class="admin-navbar-item">Dashboard</a>
                <a href="/admin/commissions" class="admin-navbar-item active">Commissions</a>
                <a href="/admin/characters" class="admin-navbar-item">Characters</a>
                <a href="/admin/upper-campus" class="admin-navbar-item">Upper Campus</a>
                <a href="/admin/artists" class="admin-navbar-item">Artists</a>
                <a href="/admin/tags" class="admin-navbar-item">Tags</a>
                <a href="/admin/collections" class="admin-navbar-item">Collections</a>
            </div>

            <div class="admin-navbar-end">
                <div class="admin-navbar-item">
                    <span>Welcome, <%= user.username %></span>
                </div>
                <div class="admin-navbar-item">
                    <a href="/" class="btn btn-ghost">View Site</a>
                </div>
                <div class="admin-navbar-item">
                    <form method="POST" action="/admin/logout" style="display: inline;">
                        <button type="submit" class="btn btn-ghost">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="admin-main">
        <div class="admin-container">
            <div class="admin-header">
                <h1>Commissions</h1>
                <div class="admin-header-actions">
                    <a href="/admin/commissions/new" class="btn btn-solid">+ Add Commission</a>
                </div>
            </div>

            <div class="admin-content">
                <% if (commissions.length === 0) { %>
                    <div class="empty-state">
                        <h3>No Commissions Yet</h3>
                        <p>Commissions are the heart of your database - artworks with details, images, and metadata.</p>
                        <a href="/admin/commissions/new" class="btn btn-solid">Add Your First Commission</a>
                    </div>
                <% } else { %>
                    <div class="admin-grid">
                        <% commissions.forEach(commission => { %>
                            <div class="admin-card commission-card">
                                <div class="commission-image">
                                    <% if (commission.main_image_thumb) { %>
                                        <img src="/uploads/<%= commission.main_image_thumb %>" alt="<%= commission.title %>" class="commission-thumb">
                                    <% } else { %>
                                        <div class="commission-thumb-placeholder">
                                            <span>üìù</span>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div class="commission-info">
                                    <h3><%= commission.title %></h3>
                                    <div class="commission-meta">
                                        <% if (commission.artist_name) { %>
                                            <span class="artist-badge">
                                                <%= commission.artist_name %>
                                            </span>
                                        <% } %>
                                        <% if (commission.date_month) { %>
                                            <span class="date-badge"><%= commission.date_month %></span>
                                        <% } %>
                                        <% if (commission.score) { %>
                                            <span class="score-badge">Score: <%= commission.score %></span>
                                        <% } %>
                                        <% if (commission.nsfw) { %>
                                            <span class="nsfw-badge">NSFW</span>
                                        <% } %>
                                    </div>
                                    <% if (commission.description) { %>
                                        <p class="commission-description">
                                            <%= commission.description.substring(0, 150) %><% if (commission.description.length > 150) { %>...<% } %>
                                        </p>
                                    <% } %>
                                </div>
                                
                                <div class="commission-actions">
                                    <a href="/c/<%= commission.slug %>" class="btn btn-ghost">View</a>
                                    <a href="/admin/commissions/<%= commission.id %>/edit" class="btn btn-solid">Edit</a>
                                    <form method="POST" action="/admin/commissions/<%= commission.id %>/delete" style="display: inline;" 
                                          onsubmit="return confirm('Are you sure you want to delete this commission? This action cannot be undone and will delete all associated files.')">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <style>
    .commission-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
    }

    .commission-image {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .commission-thumb, .commission-thumb-placeholder {
        width: 120px;
        height: 120px;
        border-radius: 8px;
        object-fit: cover;
    }

    .commission-thumb-placeholder {
        background: var(--card-bg);
        border: 2px dashed var(--border);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: var(--text-secondary);
    }

    .commission-info h3 {
        margin: 0 0 0.5rem 0;
        text-align: center;
        line-height: 1.3;
    }

    .commission-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .artist-badge, .date-badge, .score-badge, .nsfw-badge {
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .artist-badge {
        background: var(--primary);
        color: white;
    }

    .date-badge {
        background: var(--secondary);
        color: white;
    }

    .score-badge {
        background: var(--accent);
        color: white;
    }

    .nsfw-badge {
        background: #ff5722;
        color: white;
    }

    .commission-description {
        font-size: 0.9rem;
        color: var(--text-secondary);
        line-height: 1.4;
        margin: 0 0 1rem 0;
        text-align: center;
    }

    .commission-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: auto;
    }

    .commission-actions .btn {
        flex: 1;
        text-align: center;
        font-size: 0.85rem;
        padding: 0.5rem;
    }

    .admin-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: var(--text-secondary);
    }

    .empty-state h3 {
        margin-bottom: 1rem;
        color: var(--text-primary);
    }

    .empty-state p {
        margin-bottom: 2rem;
    }
    </style>

    <script src="/public/js/app.js"></script>
    <script src="/public/js/admin.js"></script>
</body>
</html>