<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artists - Admin - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body class="dark-theme">
    <nav class="admin-navbar">
        <div class="admin-navbar-container">
            <div class="admin-navbar-brand">
                <a href="/admin">CommissionDB Admin</a>
            </div>
            
            <div class="admin-navbar-menu">
                <a href="/admin" class="admin-navbar-item">Dashboard</a>
                <a href="/admin/commissions" class="admin-navbar-item">Commissions</a>
                <a href="/admin/characters" class="admin-navbar-item">Characters</a>
                <a href="/admin/upper-campus" class="admin-navbar-item">Upper Campus</a>
                <a href="/admin/artists" class="admin-navbar-item active">Artists</a>
                <a href="/admin/tags" class="admin-navbar-item">Tags</a>
                <a href="/admin/collections" class="admin-navbar-item">Collections</a>
            </div>

            <div class="admin-navbar-end">
                <div class="admin-navbar-item">
                    <span>Welcome, <%= user.username %></span>
                </div>
                <div class="admin-navbar-item">
                    <a href="/" class="btn btn-ghost">View Site</a>
                </div>
                <div class="admin-navbar-item">
                    <form method="POST" action="/admin/logout" style="display: inline;">
                        <button type="submit" class="btn btn-ghost">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="admin-main">
        <div class="admin-container">
            <div class="admin-header">
                <h1>Artists</h1>
                <div class="admin-header-actions">
                    <a href="/admin/artists/new" class="btn btn-solid">+ Add Artist</a>
                </div>
            </div>

            <div class="admin-content">
                <% if (artists.length === 0) { %>
                    <div class="empty-state">
                        <h3>No Artists Yet</h3>
                        <p>Artists are the creators of the commissions in your database.</p>
                        <a href="/admin/artists/new" class="btn btn-solid">Create Your First Artist</a>
                    </div>
                <% } else { %>
                    <div class="admin-grid">
                        <% artists.forEach(artist => { %>
                            <div class="admin-card artist-card">
                                <div class="artist-info">
                                    <h3 class="artist-name"><%= artist.name %></h3>
                                    
                                    <% if (artist.description) { %>
                                        <p class="artist-description">
                                            <%= artist.description.length > 100 ? 
                                                artist.description.substring(0, 100) + '...' : 
                                                artist.description %>
                                        </p>
                                    <% } %>
                                    
                                    <% if (artist.website_url) { %>
                                        <div class="artist-website">
                                            <strong>Website:</strong>
                                            <a href="<%= artist.website_url %>" target="_blank" rel="noopener noreferrer" class="external-link">
                                                <%= artist.website_url.replace(/^https?:\/\//, '') %>
                                            </a>
                                        </div>
                                    <% } %>
                                    
                                    <div class="artist-meta">
                                        <span class="slug">Slug: <%= artist.slug %></span>
                                        <% if (artist.created_at) { %>
                                            <span class="created-date">Added: <%= new Date(artist.created_at).toLocaleDateString() %></span>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <div class="artist-actions">
                                    <a href="/admin/artists/<%= artist.id %>/edit" class="btn btn-ghost btn-sm">Edit</a>
                                    <form method="POST" action="/admin/artists/<%= artist.id %>/delete" style="display: inline;" 
                                          onsubmit="return confirm('Are you sure you want to delete this artist? This action cannot be undone.')">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="/public/js/app.js"></script>
    <script src="/public/js/admin.js"></script>

    <style>
    .artist-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
    }

    .artist-info {
        flex: 1;
    }

    .artist-name {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--primary);
    }

    .artist-description {
        color: var(--text-secondary);
        margin-bottom: 0.8rem;
        line-height: 1.4;
    }

    .artist-website {
        margin-bottom: 0.8rem;
        font-size: 0.9rem;
    }

    .artist-website strong {
        color: var(--text);
    }

    .external-link {
        color: var(--primary);
        text-decoration: none;
        margin-left: 0.5rem;
    }

    .external-link:hover {
        text-decoration: underline;
    }

    .artist-meta {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        font-size: 0.85rem;
        color: var(--text-secondary);
        margin-bottom: 1rem;
    }

    .slug {
        font-family: monospace;
        background: var(--bg-secondary);
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        width: fit-content;
    }

    .artist-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
        border-top: 1px solid var(--border);
        padding-top: 1rem;
    }

    .btn-sm {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
    }

    .btn-danger {
        background: #dc3545;
        color: white;
        border: none;
    }

    .btn-danger:hover {
        background: #c82333;
    }

    @media (max-width: 768px) {
        .admin-grid {
            grid-template-columns: 1fr;
        }
        
        .artist-actions {
            flex-direction: column;
        }
    }
    </style>
</body>
</html>