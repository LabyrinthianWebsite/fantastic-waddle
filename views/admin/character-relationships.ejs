<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= character.name %> Relationships - Admin - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body class="dark-theme">
    <nav class="admin-navbar">
        <div class="admin-navbar-container">
            <div class="admin-navbar-brand">
                <a href="/admin">CommissionDB Admin</a>
            </div>
            
            <div class="admin-navbar-menu">
                <a href="/admin" class="admin-navbar-item">Dashboard</a>
                <a href="/admin/commissions" class="admin-navbar-item">Commissions</a>
                <a href="/admin/characters" class="admin-navbar-item active">Characters</a>
                <a href="/admin/upper-campus" class="admin-navbar-item">Upper Campus</a>
                <a href="/admin/artists" class="admin-navbar-item">Artists</a>
                <a href="/admin/tags" class="admin-navbar-item">Tags</a>
                <a href="/admin/collections" class="admin-navbar-item">Collections</a>
            </div>

            <div class="admin-navbar-end">
                <div class="admin-navbar-item">
                    <span>Welcome, <%= user.username %></span>
                </div>
                <div class="admin-navbar-item">
                    <a href="/" class="btn btn-ghost">View Site</a>
                </div>
                <div class="admin-navbar-item">
                    <form method="POST" action="/admin/logout" style="display: inline;">
                        <button type="submit" class="btn btn-ghost">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="admin-main">
        <div class="admin-container">
            <div class="admin-header">
                <h1><%= character.name %> - Relationships</h1>
                <div class="admin-header-actions">
                    <a href="/admin/characters" class="btn btn-ghost">← Back to Characters</a>
                    <a href="/admin/characters/<%= character.id %>/edit" class="btn btn-ghost">Edit Character</a>
                </div>
            </div>

            <% if (error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
            <% } %>

            <div class="admin-content">
                <!-- Add New Relationship Form -->
                <div class="admin-card">
                    <h2>Add New Relationship</h2>
                    <form method="POST" action="/admin/characters/<%= character.id %>/relationships" class="admin-form">
                        <div class="admin-form-group">
                            <label class="admin-form-label" for="to_character_id">Related Character</label>
                            <select id="to_character_id" name="to_character_id" class="admin-form-input" required>
                                <option value="">Select a character...</option>
                                <% availableCharacters.forEach(char => { %>
                                    <option value="<%= char.id %>"><%= char.name %></option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="admin-form-group">
                            <label class="admin-form-label" for="relationship_type">Relationship Type</label>
                            <input 
                                type="text" 
                                id="relationship_type" 
                                name="relationship_type" 
                                class="admin-form-input" 
                                placeholder="e.g., Friend, Family, Rival, etc."
                                required
                            >
                        </div>

                        <div class="admin-form-group">
                            <label class="admin-form-label" for="description">Description (Optional)</label>
                            <textarea 
                                id="description" 
                                name="description" 
                                class="admin-form-input"
                                rows="3"
                                placeholder="Additional details about this relationship..."
                            ></textarea>
                        </div>

                        <div class="admin-form-actions">
                            <button type="submit" class="btn btn-solid">Add Relationship</button>
                        </div>
                    </form>
                </div>

                <!-- Existing Relationships -->
                <div class="admin-card">
                    <h2>Existing Relationships</h2>
                    <% if (relationships.length === 0) { %>
                        <div class="empty-state">
                            <p>No relationships defined for this character yet.</p>
                        </div>
                    <% } else { %>
                        <div class="relationships-list">
                            <% relationships.forEach(relationship => { %>
                                <div class="relationship-item">
                                    <div class="relationship-info">
                                        <h4><%= character.name %> → <%= relationship.related_character_name %></h4>
                                        <span class="relationship-type"><%= relationship.relationship_type %></span>
                                        <% if (relationship.description) { %>
                                            <p class="relationship-description"><%= relationship.description %></p>
                                        <% } %>
                                    </div>
                                    <div class="relationship-actions">
                                        <form method="POST" action="/admin/characters/relationships/<%= relationship.id %>/delete" style="display: inline;">
                                            <button type="submit" class="btn btn-ghost btn-small" onclick="return confirm('Are you sure you want to delete this relationship?')">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <style>
    .relationships-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .relationship-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border: 1px solid var(--border);
        border-radius: 8px;
        background: var(--background-secondary);
    }

    .relationship-info h4 {
        margin: 0 0 0.5rem 0;
        color: var(--text-primary);
    }

    .relationship-type {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        background: var(--primary);
        color: white;
        border-radius: 4px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .relationship-description {
        margin: 0.5rem 0 0 0;
        color: var(--text-secondary);
        font-style: italic;
    }

    .relationship-actions {
        flex-shrink: 0;
    }

    .btn-small {
        font-size: 0.875rem;
        padding: 0.375rem 0.75rem;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: var(--text-secondary);
    }
    </style>

    <script src="/public/js/app.js"></script>
    <script src="/public/js/admin.js"></script>
</body>
</html>