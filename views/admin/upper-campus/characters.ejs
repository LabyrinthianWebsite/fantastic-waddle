<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upper Campus Characters - Admin - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body class="dark-theme">
    <nav class="admin-navbar">
        <div class="admin-navbar-container">
            <div class="admin-navbar-brand">
                <a href="/admin">CommissionDB Admin</a>
            </div>
            
            <div class="admin-navbar-menu">
                <a href="/admin" class="admin-navbar-item">Dashboard</a>
                <a href="/admin/commissions" class="admin-navbar-item">Commissions</a>
                <a href="/admin/characters" class="admin-navbar-item">Characters</a>
                <a href="/admin/upper-campus" class="admin-navbar-item active">Upper Campus</a>
                <a href="/admin/artists" class="admin-navbar-item">Artists</a>
                <a href="/admin/tags" class="admin-navbar-item">Tags</a>
                <a href="/admin/collections" class="admin-navbar-item">Collections</a>
            </div>

            <div class="admin-navbar-end">
                <div class="admin-navbar-item">
                    <span>Welcome, <%= user.username %></span>
                </div>
                <div class="admin-navbar-item">
                    <a href="/" class="btn btn-ghost">View Site</a>
                </div>
                <div class="admin-navbar-item">
                    <form method="POST" action="/admin/logout" style="display: inline;">
                        <button type="submit" class="btn btn-ghost">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="admin-main">
        <div class="admin-container">
            <div class="admin-header">
                <h1>Upper Campus Characters</h1>
                <div class="admin-header-actions">
                    <a href="/admin/upper-campus/new" class="btn btn-solid">+ Add Upper Campus Character</a>
                </div>
            </div>

            <div class="admin-content">
                <% if (characters.length === 0) { %>
                    <div class="empty-state">
                        <h3>No Upper Campus Characters Yet</h3>
                        <p>Upper Campus characters are separate from regular characters and are not associated with commissions.</p>
                        <a href="/admin/upper-campus/new" class="btn btn-solid">Create Your First Upper Campus Character</a>
                    </div>
                <% } else { %>
                    <div class="admin-grid">
                        <% characters.forEach(character => { %>
                            <div class="admin-card character-card">
                                <div class="character-portrait">
                                    <% if (character.portrait_thumb_path) { %>
                                        <img src="/uploads/<%= character.portrait_thumb_path %>" alt="<%= character.name %>" class="character-thumb">
                                    <% } else { %>
                                        <div class="character-thumb-placeholder">
                                            <span><%= character.name.charAt(0).toUpperCase() %></span>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div class="character-info">
                                    <h3><%= character.name %></h3>
                                    <div class="character-meta">
                                        <% if (character.dormitory) { %>
                                            <span 
                                                class="dormitory-badge dormitory-<%= character.dormitory.replace(/\s+/g, '-').toLowerCase() %>"
                                                <% if (character.dormitory_color) { %>style="background-color: <%= character.dormitory_color %>; color: white;"<% } %>
                                            >
                                                <%= character.dormitory %>
                                                <% if (character.dormitory_animal) { %>
                                                    <sup class="dormitory-icon" title="<%= character.dormitory %>"><%= character.dormitory_animal %></sup>
                                                <% } %>
                                            </span>
                                        <% } %>
                                        <% if (character.age_category) { %>
                                            <span class="age-badge"><%= character.age_category %></span>
                                        <% } %>
                                    </div>
                                    <% if (character.description) { %>
                                        <p class="character-description">
                                            <%= character.description.substring(0, 150) %><% if (character.description.length > 150) { %>...<% } %>
                                        </p>
                                    <% } %>
                                </div>
                                
                                <div class="character-actions">
                                    <a href="/admin/upper-campus/<%= character.id %>" class="btn btn-ghost">View</a>
                                    <a href="/admin/upper-campus/<%= character.id %>/edit" class="btn btn-solid">Edit</a>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <style>
    .character-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
    }

    .character-portrait {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .character-thumb, .character-thumb-placeholder {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: contain;
        background: var(--bg-secondary);
    }

    .character-thumb-placeholder {
        background: var(--primary);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: bold;
        color: white;
    }

    .character-info h3 {
        margin: 0 0 0.5rem 0;
        text-align: center;
    }

    .character-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .dormitory-badge, .age-badge {
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .dormitory-badge {
        background: var(--primary);
        color: white;
    }

    .age-badge {
        background: var(--secondary);
        color: white;
    }

    .character-description {
        font-size: 0.9rem;
        color: var(--text-secondary);
        line-height: 1.4;
        margin: 0 0 1rem 0;
    }

    .character-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: auto;
    }

    .character-actions .btn {
        flex: 1;
        text-align: center;
        font-size: 0.85rem;
        padding: 0.5rem;
    }

    .admin-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: var(--text-secondary);
    }

    .empty-state h3 {
        margin-bottom: 1rem;
        color: var(--text-primary);
    }

    .empty-state p {
        margin-bottom: 2rem;
    }
    </style>

    <script src="/public/js/app.js"></script>
    <script src="/public/js/admin.js"></script>
</body>
</html>