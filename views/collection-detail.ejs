<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= collection.name %> - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="icon" type="image/x-icon" href="/public/icons/favicon.ico">
</head>
<body class="dark-theme">
    <nav class="navbar">
        <div class="navbar-container">
            <div class="navbar-brand">
                <a href="/">CommissionDB</a>
            </div>
            
            <div class="navbar-menu">
                <a href="/" class="navbar-item">Browse</a>
                <a href="/characters" class="navbar-item">Characters</a>
                <a href="/upper-campus" class="navbar-item">Upper Campus</a>
                <a href="/artists" class="navbar-item">Artists</a>
                <a href="/collections" class="navbar-item">Collections</a>
                <a href="/tags" class="navbar-item">Tags</a>
                <a href="/stats" class="navbar-item">Stats</a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <button class="btn btn-ghost" id="theme-toggle" aria-label="Toggle theme">
                        <span class="theme-icon">üåô</span>
                    </button>
                </div>
                
                <div class="navbar-item">
                    <button class="btn btn-ghost" id="safe-mode-toggle" aria-label="Toggle safe mode">
                        <span class="safe-mode-icon">üîí</span>
                    </button>
                </div>

                <div class="navbar-item">
                    <a href="/admin" class="btn btn-solid">Admin</a>
                </div>

                <div class="navbar-item">
                    <button class="btn btn-ghost" id="keyboard-help" aria-label="Keyboard shortcuts">
                        <span>?</span>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <main class="main-content">

<div class="collection-detail-container">
    <!-- Collection Header -->
    <div class="collection-header">
        <div class="collection-cover-large">
            <img 
                src="<%= collection.cover_url %>" 
                alt="<%= collection.name %>"
                class="collection-image-large"
            >
        </div>
        
        <div class="collection-info-main">
            <nav class="breadcrumb">
                <a href="/collections">Collections</a>
                <span class="breadcrumb-separator">‚Ä∫</span>
                <span class="breadcrumb-current"><%= collection.name %></span>
            </nav>
            
            <h1 class="collection-name-large"><%= collection.name %></h1>
            
            <% if (collection.description) { %>
                <div class="collection-description">
                    <p><%= collection.description %></p>
                </div>
            <% } %>
            
            <div class="collection-stats">
                <div class="stat-item">
                    <span class="stat-number"><%= commissions.length %></span>
                    <span class="stat-label">Commission<%= commissions.length !== 1 ? 's' : '' %></span>
                </div>
                <% if (commissions.length > 0) { %>
                    <div class="stat-item">
                        <span class="stat-number"><%= commissions.filter(c => c.artist_name).map(c => c.artist_name).filter((v, i, a) => a.indexOf(v) === i).length %></span>
                        <span class="stat-label">Artist<%= commissions.filter(c => c.artist_name).map(c => c.artist_name).filter((v, i, a) => a.indexOf(v) === i).length !== 1 ? 's' : '' %></span>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Commissions in Collection -->
    <% if (commissions.length > 0) { %>
    <div class="collection-content">
        <section class="commissions-section">
            <h2>Commissions in this Collection</h2>
            
            <div class="commissions-grid">
                <% commissions.forEach(commission => { %>
                    <div class="commission-card">
                        <a href="/c/<%= commission.slug %>" class="commission-link">
                            <div class="commission-image">
                                <img 
                                    src="<%= commission.thumb_url %>" 
                                    alt="<%= commission.title %>"
                                    class="commission-thumb <% if (commission.nsfw) { %>nsfw-content<% } %>"
                                    loading="lazy"
                                >
                                <% if (commission.nsfw) { %>
                                    <div class="nsfw-overlay">NSFW</div>
                                <% } %>
                            </div>
                            
                            <div class="commission-info">
                                <h3 class="commission-title"><%= commission.title %></h3>
                                <div class="commission-meta">
                                    <span class="commission-date"><%= commission.formatted_date %></span>
                                    <% if (commission.artist_name) { %>
                                        <span class="commission-artist">by <%= commission.artist_name %></span>
                                    <% } %>
                                    <% if (commission.score) { %>
                                        <span class="commission-score">‚≠ê <%= commission.score %></span>
                                    <% } %>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        </section>
    </div>
    <% } else { %>
    <div class="empty-collection">
        <h3>This collection is empty</h3>
        <p>No commissions have been added to this collection yet.</p>
    </div>
    <% } %>
</div>

<style>
.collection-detail-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
}

.collection-header {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
    background: var(--card-bg);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: var(--shadow);
}

.collection-cover-large {
    aspect-ratio: 16/9;
    border-radius: 8px;
    overflow: hidden;
    background: var(--bg-secondary);
}

.collection-image-large {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.breadcrumb {
    margin-bottom: 1rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.breadcrumb a {
    color: var(--primary);
    text-decoration: none;
}

.breadcrumb a:hover {
    text-decoration: underline;
}

.breadcrumb-separator {
    margin: 0 0.5rem;
}

.breadcrumb-current {
    color: var(--text);
}

.collection-name-large {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text);
    line-height: 1.2;
}

.collection-description {
    margin-bottom: 2rem;
    color: var(--text);
    line-height: 1.6;
    font-size: 1.1rem;
}

.collection-stats {
    display: flex;
    gap: 2rem;
}

.stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary);
    line-height: 1;
}

.stat-label {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
}

.collection-content {
    margin-top: 2rem;
}

.commissions-section h2 {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    color: var(--text);
    border-bottom: 2px solid var(--primary);
    padding-bottom: 0.5rem;
}

.commissions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
}

.commission-card {
    background: var(--card-bg);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.commission-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-hover);
}

.commission-link {
    display: block;
    text-decoration: none;
    color: inherit;
}

.commission-image {
    aspect-ratio: 4/3;
    overflow: hidden;
    position: relative;
    background: var(--bg-secondary);
}

.commission-thumb {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.nsfw-overlay {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: rgba(255, 0, 0, 0.8);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 600;
}

.commission-info {
    padding: 1rem;
}

.commission-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.commission-meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
}

.commission-score {
    color: var(--primary);
    font-weight: 500;
}

.empty-collection {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--card-bg);
    border-radius: 12px;
    box-shadow: var(--shadow);
}

.empty-collection h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--text);
}

.empty-collection p {
    color: var(--text-secondary);
}

@media (max-width: 768px) {
    .collection-header {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
    }
    
    .collection-cover-large {
        max-width: 400px;
        margin: 0 auto;
    }
    
    .collection-name-large {
        font-size: 2rem;
    }
    
    .collection-stats {
        justify-content: center;
    }
    
    .commissions-grid {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 1rem;
    }
}
</style>

    <script src="/public/js/app.js"></script>
    </main>
</body>
</html>