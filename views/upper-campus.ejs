<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upper Campus Characters - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="icon" type="image/x-icon" href="/public/icons/favicon.ico">
</head>
<body class="dark-theme">
    <nav class="navbar">
        <div class="navbar-container">
            <div class="navbar-brand">
                <a href="/">CommissionDB</a>
            </div>
            
            <div class="navbar-menu">
                <a href="/" class="navbar-item">Browse</a>
                <a href="/characters" class="navbar-item">Characters</a>
                <a href="/upper-campus" class="navbar-item">Upper Campus</a>
                <a href="/artists" class="navbar-item">Artists</a>
                <a href="/collections" class="navbar-item">Collections</a>
                <a href="/tags" class="navbar-item">Tags</a>
                <a href="/stats" class="navbar-item">Stats</a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <button class="btn btn-ghost" id="theme-toggle" aria-label="Toggle theme">
                        <span class="theme-icon">ðŸŒ™</span>
                    </button>
                </div>
                
                <div class="navbar-item">
                    <button class="btn btn-ghost" id="safe-mode-toggle" aria-label="Toggle safe mode">
                        <span class="safe-mode-icon">ðŸ”’</span>
                    </button>
                </div>

                <div class="navbar-item">
                    <a href="/admin" class="btn btn-solid">Admin</a>
                </div>

                <div class="navbar-item">
                    <button class="btn btn-ghost" id="keyboard-help" aria-label="Keyboard shortcuts">
                        <span>?</span>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <main class="main-content">

<div class="characters-container">
    <div class="page-header">
        <h1>Upper Campus Characters</h1>
        <p>Browse Upper Campus characters with detailed information and portraits</p>
    </div>

    <!-- Search and Filters -->
    <div class="filters-section">
        <form class="filters-form" method="GET" action="/upper-campus">
            <div class="search-row">
                <div class="search-input-group">
                    <input 
                        type="text" 
                        name="q" 
                        value="<%= filters.q %>" 
                        placeholder="Search Upper Campus characters..." 
                        class="search-input"
                        id="character-search"
                    >
                    <button type="submit" class="search-btn">Search</button>
                </div>
            </div>

            <div class="filters-row">
                <!-- Dormitory Filter -->
                <div class="filter-group">
                    <label for="dormitory">Dormitory:</label>
                    <select name="dormitory" id="dormitory" class="filter-select">
                        <option value="">All Dormitories</option>
                        <% filterOptions.dormitories.forEach(dormitory => { %>
                            <option value="<%= dormitory %>" <%= filters.dormitory === dormitory ? 'selected' : '' %>>
                                <%= dormitory %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Grade Filter -->
                <div class="filter-group">
                    <label for="grade">Grade:</label>
                    <select name="grade" id="grade" class="filter-select">
                        <option value="">All Grades</option>
                        <% filterOptions.grades.forEach(grade => { %>
                            <option value="<%= grade %>" <%= filters.grade === grade ? 'selected' : '' %>>
                                <%= grade %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Age Category Filter -->
                <div class="filter-group">
                    <label for="age_category">Age:</label>
                    <select name="age_category" id="age_category" class="filter-select">
                        <option value="">All Ages</option>
                        <% filterOptions.ageCategories.forEach(age => { %>
                            <option value="<%= age %>" <%= filters.age_category === age ? 'selected' : '' %>>
                                <%= age %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Hair Color Filter -->
                <div class="filter-group">
                    <label for="hair_color">Hair Color:</label>
                    <select name="hair_color" id="hair_color" class="filter-select">
                        <option value="">All Hair Colors</option>
                        <% filterOptions.hairColors.forEach(color => { %>
                            <option value="<%= color %>" <%= filters.hair_color === color ? 'selected' : '' %>>
                                <%= color %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Eye Color Filter -->
                <div class="filter-group">
                    <label for="eye_color">Eye Color:</label>
                    <select name="eye_color" id="eye_color" class="filter-select">
                        <option value="">All Eye Colors</option>
                        <% filterOptions.eyeColors.forEach(color => { %>
                            <option value="<%= color %>" <%= filters.eye_color === color ? 'selected' : '' %>>
                                <%= color %>
                            </option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div class="filter-actions">
                <button type="submit" class="btn btn-solid">Apply Filters</button>
                <a href="/upper-campus" class="btn btn-ghost">Clear All</a>
            </div>
        </form>
    </div>

    <!-- Characters Grid -->
    <div class="characters-grid">
        <% if (characters.length === 0) { %>
            <div class="no-results">
                <h3>No Upper Campus characters found</h3>
                <p>Try adjusting your search or filters.</p>
            </div>
        <% } else { %>
            <% characters.forEach(character => { %>
                <div class="character-card">
                    <a href="/char/<%= character.slug %>" class="character-card-link">
                        <div class="character-portrait">
                            <img 
                                src="<%= character.portrait_url %>" 
                                alt="<%= character.name %>"
                                class="character-image"
                                loading="lazy"
                                onerror="this.src='/public/images/character-placeholder.jpg'; this.onerror=null;"
                            >
                        </div>
                        
                        <div class="character-info">
                            <h3 class="character-name"><%= character.name %></h3>
                            
                            <div class="character-details">
                                <% if (character.dormitory) { %>
                                    <div class="character-detail">
                                        <span class="detail-label">Dormitory:</span>
                                        <span 
                                            class="detail-value dormitory-name" 
                                            style="color: <%= character.dormitory_color %>"
                                        >
                                            <%= character.dormitory %>
                                            <% if (character.dormitory_animal) { %>
                                                <sup class="dormitory-icon" title="<%= character.dormitory %>"><%= character.dormitory_animal %></sup>
                                            <% } %>
                                        </span>
                                    </div>
                                <% } %>
                                
                                <% if (character.grade) { %>
                                    <div class="character-detail">
                                        <span class="detail-label">Grade:</span>
                                        <span class="detail-value"><%= character.grade %></span>
                                    </div>
                                <% } %>
                                
                                <% if (character.age_category) { %>
                                    <div class="character-detail">
                                        <span class="detail-label">Age:</span>
                                        <span class="detail-value"><%= character.age_category %></span>
                                    </div>
                                <% } %>
                                
                                <% if (character.hair_color) { %>
                                    <div class="character-detail">
                                        <span class="detail-label">Hair:</span>
                                        <span class="detail-value"><%= character.hair_color %></span>
                                    </div>
                                <% } %>
                                
                                <% if (character.eye_color) { %>
                                    <div class="character-detail">
                                        <span class="detail-label">Eyes:</span>
                                        <span class="detail-value"><%= character.eye_color %></span>
                                    </div>
                                <% } %>

                                <% if (character.aliases) { %>
                                    <div class="character-detail">
                                        <span class="detail-label">Aliases:</span>
                                        <span class="detail-value"><%= character.aliases %></span>
                                    </div>
                                <% } %>

                                <% if (character.description) { %>
                                    <div class="character-description">
                                        <p><%= character.description.substring(0, 120) %><% if (character.description.length > 120) { %>...<% } %></p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        <% } %>
    </div>

    <!-- Results Count -->
    <div class="results-count">
        <p><%= characters.length %> Upper Campus character<%= characters.length !== 1 ? 's' : '' %> found</p>
    </div>
</div>

<style>
.characters-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
}

.page-header {
    text-align: center;
    margin-bottom: 2rem;
}

.page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--primary);
}

.page-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
}

.filters-section {
    background: var(--card-bg);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    box-shadow: var(--shadow);
    border-left: 4px solid var(--primary);
}

.search-row {
    margin-bottom: 1rem;
}

.search-input-group {
    display: flex;
    gap: 0.5rem;
    max-width: 500px;
}

.search-input {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    background: var(--input-bg);
    color: var(--text);
}

.search-btn {
    padding: 0.75rem 1.5rem;
    background: var(--primary);
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.filters-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
}

.filter-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.filter-group label {
    font-weight: 500;
    color: var(--text-secondary);
}

.filter-select {
    padding: 0.5rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    background: var(--input-bg);
    color: var(--text);
}

.filter-actions {
    display: flex;
    gap: 1rem;
}

.characters-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.character-card {
    background: var(--card-bg);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid var(--border);
    position: relative;
}

.character-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
    border-radius: 16px 16px 0 0;
}

.character-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
}

.character-card:hover {
    transform: translateY(-4px) scale(1.01);
    box-shadow: var(--shadow-hover);
    border-color: var(--primary);
}
    box-shadow: var(--shadow-hover);
}

.character-portrait {
    max-height: 300px;
    overflow: hidden;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
}

.character-image {
    width: 100%;
    height: auto;
    max-height: 300px;
    object-fit: contain;
    object-position: center;
}

.character-info {
    padding: 1rem;
}

.character-name {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--text);
}

.character-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
}

.character-detail {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    font-size: 0.9rem;
}

.detail-label {
    font-weight: 500;
    color: var(--text-secondary);
    min-width: 70px;
}

.detail-value {
    color: var(--text);
    text-align: right;
    flex: 1;
}

.dormitory-name {
    font-weight: 600;
}

.character-description {
    padding-top: 0.5rem;
    border-top: 1px solid var(--border);
    margin-top: 0.5rem;
}

.character-description p {
    font-size: 0.85rem;
    color: var(--text-secondary);
    line-height: 1.4;
    margin: 0;
}

.no-results {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    color: var(--text-secondary);
}

.results-count {
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s ease;
}

.btn-solid {
    background: var(--primary);
    color: white;
}

.btn-ghost {
    background: transparent;
    color: var(--text-secondary);
    border: 1px solid var(--border);
}

.btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
}
</style>

    <script src="/public/js/app.js"></script>
    </main>
</body>
</html>