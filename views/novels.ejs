<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novels - CommissionDB</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <div class="navbar-brand">
                <a href="/">CommissionDB</a>
            </div>
            
            <div class="navbar-menu">
                <a href="/" class="navbar-item">Commissions</a>
                <a href="/novels" class="navbar-item active">Novels</a>
                <a href="/characters" class="navbar-item">Characters</a>
                <a href="/artists" class="navbar-item">Artists</a>
                <a href="/collections" class="navbar-item">Collections</a>
                <a href="/tags" class="navbar-item">Tags</a>
                <a href="/stats" class="navbar-item">Stats</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1>Novels</h1>
                <p class="page-description">Browse text-based commissions with original and translated content</p>
            </div>

            <!-- Search and Filters -->
            <div class="search-filters">
                <form method="GET" action="/novels" class="search-form">
                    <div class="search-row">
                        <div class="search-group">
                            <input type="text" name="q" value="<%= filters.q %>" placeholder="Search novels..." class="search-input">
                        </div>
                        <div class="search-group">
                            <select name="sort" class="search-select">
                                <option value="date_desc" <%= filters.sort === 'date_desc' ? 'selected' : '' %>>Newest First</option>
                                <option value="date_asc" <%= filters.sort === 'date_asc' ? 'selected' : '' %>>Oldest First</option>
                                <option value="title_asc" <%= filters.sort === 'title_asc' ? 'selected' : '' %>>Title A-Z</option>
                                <option value="title_desc" <%= filters.sort === 'title_desc' ? 'selected' : '' %>>Title Z-A</option>
                                <option value="score_desc" <%= filters.sort === 'score_desc' ? 'selected' : '' %>>Highest Score</option>
                                <option value="score_asc" <%= filters.sort === 'score_asc' ? 'selected' : '' %>>Lowest Score</option>
                                <option value="words_desc" <%= filters.sort === 'words_desc' ? 'selected' : '' %>>Most Words</option>
                                <option value="words_asc" <%= filters.sort === 'words_asc' ? 'selected' : '' %>>Fewest Words</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-solid">Search</button>
                    </div>
                    
                    <div class="filter-row">
                        <div class="filter-group">
                            <label>Artist</label>
                            <select name="artist_id" class="filter-select">
                                <option value="">All Artists</option>
                                <% artists.forEach(artist => { %>
                                    <option value="<%= artist.id %>" <%= filters.artist_id == artist.id ? 'selected' : '' %>>
                                        <%= artist.name %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label>Language</label>
                            <select name="language" class="filter-select">
                                <option value="">All Languages</option>
                                <option value="en" <%= filters.language === 'en' ? 'selected' : '' %>>English</option>
                                <option value="ja" <%= filters.language === 'ja' ? 'selected' : '' %>>Japanese</option>
                                <option value="zh" <%= filters.language === 'zh' ? 'selected' : '' %>>Chinese</option>
                                <option value="ko" <%= filters.language === 'ko' ? 'selected' : '' %>>Korean</option>
                                <option value="es" <%= filters.language === 'es' ? 'selected' : '' %>>Spanish</option>
                                <option value="fr" <%= filters.language === 'fr' ? 'selected' : '' %>>French</option>
                                <option value="de" <%= filters.language === 'de' ? 'selected' : '' %>>German</option>
                                <option value="ru" <%= filters.language === 'ru' ? 'selected' : '' %>>Russian</option>
                                <option value="pt" <%= filters.language === 'pt' ? 'selected' : '' %>>Portuguese</option>
                                <option value="it" <%= filters.language === 'it' ? 'selected' : '' %>>Italian</option>
                                <option value="other" <%= filters.language === 'other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>

                        <div class="filter-group">
                            <label>Rating</label>
                            <select name="rating" class="filter-select">
                                <option value="">All Content</option>
                                <option value="sfw" <%= filters.rating === 'sfw' ? 'selected' : '' %>>SFW Only</option>
                                <option value="nsfw" <%= filters.rating === 'nsfw' ? 'selected' : '' %>>NSFW Only</option>
                            </select>
                        </div>

                        <div class="filter-group">
                            <label>Score Range</label>
                            <div class="score-range">
                                <input type="number" name="min_score" value="<%= filters.min_score %>" placeholder="Min" min="0" max="100" class="score-input">
                                <span>to</span>
                                <input type="number" name="max_score" value="<%= filters.max_score %>" placeholder="Max" min="0" max="100" class="score-input">
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Results -->
            <div class="results-info">
                <span class="results-count">
                    <%= pagination.total_items %> novel<%= pagination.total_items !== 1 ? 's' : '' %> found
                </span>
                <% if (filters.q || filters.artist_id || filters.language || filters.rating || filters.min_score || filters.max_score || filters.tags.length > 0) { %>
                    <a href="/novels" class="clear-filters">Clear all filters</a>
                <% } %>
            </div>

            <% if (novels.length === 0) { %>
                <div class="empty-state">
                    <h3>No novels found</h3>
                    <p>Try adjusting your search criteria or browse all novels.</p>
                    <a href="/novels" class="btn btn-solid">View All Novels</a>
                </div>
            <% } else { %>
                <div class="novels-grid">
                    <% novels.forEach(novel => { %>
                        <div class="novel-card">
                            <div class="novel-header">
                                <h3 class="novel-title">
                                    <a href="/novels/<%= novel.slug %>"><%= novel.title %></a>
                                    <% if (novel.nsfw) { %>
                                        <span class="nsfw-badge">NSFW</span>
                                    <% } %>
                                </h3>
                                <div class="novel-meta">
                                    <span class="novel-date"><%= novel.formatted_date %></span>
                                    <% if (novel.artist_name) { %>
                                        • <a href="/artists/<%= novel.artist_slug %>" class="novel-artist"><%= novel.artist_name %></a>
                                    <% } %>
                                </div>
                            </div>

                            <% if (novel.description) { %>
                                <p class="novel-description">
                                    <%= novel.description.substring(0, 150) %><%= novel.description.length > 150 ? '...' : '' %>
                                </p>
                            <% } %>

                            <div class="novel-stats">
                                <div class="stat">
                                    <span class="stat-label">Words:</span>
                                    <span class="stat-value"><%= novel.word_count ? novel.word_count.toLocaleString() : '0' %></span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">Score:</span>
                                    <span class="stat-value"><%= novel.score || 0 %>/100</span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">Languages:</span>
                                    <span class="stat-value">
                                        <%= novel.original_language.toUpperCase() %>
                                        <% if (novel.translated_language) { %>
                                            → <%= novel.translated_language.toUpperCase() %>
                                        <% } %>
                                    </span>
                                </div>
                            </div>

                            <div class="novel-footer">
                                <a href="/novels/<%= novel.slug %>" class="btn btn-outline">Read Novel</a>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <!-- Pagination -->
                <% if (pagination.total > 1) { %>
                    <div class="pagination">
                        <% if (pagination.current > 1) { %>
                            <a href="?<%= new URLSearchParams({...filters, page: pagination.current - 1}).toString() %>" class="pagination-btn">« Previous</a>
                        <% } %>
                        
                        <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                            <% if (i === pagination.current) { %>
                                <span class="pagination-btn active"><%= i %></span>
                            <% } else { %>
                                <a href="?<%= new URLSearchParams({...filters, page: i}).toString() %>" class="pagination-btn"><%= i %></a>
                            <% } %>
                        <% } %>
                        
                        <% if (pagination.current < pagination.total) { %>
                            <a href="?<%= new URLSearchParams({...filters, page: pagination.current + 1}).toString() %>" class="pagination-btn">Next »</a>
                        <% } %>
                    </div>
                <% } %>
            <% } %>
        </div>
    </main>

    <style>
        .novels-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 2rem;
            margin: 2rem 0;
        }

        .novel-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .novel-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }

        .novel-header {
            margin-bottom: 1rem;
        }

        .novel-title {
            margin: 0 0 0.5rem 0;
            font-size: 1.25rem;
            line-height: 1.3;
        }

        .novel-title a {
            color: var(--text-primary);
            text-decoration: none;
        }

        .novel-title a:hover {
            color: var(--accent);
        }

        .novel-meta {
            font-size: 0.9rem;
            color: var(--text-secondary);
        }

        .novel-artist {
            color: var(--accent);
            text-decoration: none;
        }

        .novel-artist:hover {
            text-decoration: underline;
        }

        .novel-description {
            color: var(--text-secondary);
            line-height: 1.5;
            margin-bottom: 1rem;
        }

        .novel-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0.5rem;
            margin-bottom: 1rem;
            padding: 1rem;
            background: var(--bg-secondary);
            border-radius: 8px;
        }

        .stat {
            display: flex;
            justify-content: space-between;
            font-size: 0.9rem;
        }

        .stat-label {
            color: var(--text-secondary);
        }

        .stat-value {
            color: var(--text-primary);
            font-weight: bold;
        }

        .novel-footer {
            display: flex;
            justify-content: flex-end;
        }

        .nsfw-badge {
            background-color: #dc2626;
            color: white;
            padding: 2px 6px;
            border-radius: 8px;
            font-size: 0.7em;
            font-weight: bold;
            margin-left: 8px;
        }

        .search-filters {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow);
        }

        .search-row {
            display: grid;
            grid-template-columns: 1fr auto auto;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .filter-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .filter-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
            color: var(--text-primary);
        }

        .search-input,
        .search-select,
        .filter-select,
        .score-input {
            width: 100%;
            padding: 0.75rem;
            background: var(--input-bg);
            border: 1px solid var(--border);
            border-radius: 8px;
            color: var(--text-primary);
        }

        .score-range {
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            gap: 0.5rem;
            align-items: center;
        }

        .score-input {
            width: 100%;
        }

        .results-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .results-count {
            color: var(--text-secondary);
        }

        .clear-filters {
            color: var(--accent);
            text-decoration: none;
            font-size: 0.9rem;
        }

        .clear-filters:hover {
            text-decoration: underline;
        }

        .empty-state {
            text-align: center;
            padding: 3rem;
            color: var(--text-secondary);
        }

        .empty-state h3 {
            margin-bottom: 1rem;
            color: var(--text-primary);
        }

        .empty-state p {
            margin-bottom: 2rem;
        }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin-top: 3rem;
        }

        .pagination-btn {
            padding: 0.5rem 1rem;
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 8px;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .pagination-btn:hover,
        .pagination-btn.active {
            background: var(--accent);
            color: white;
            border-color: var(--accent);
        }

        .navbar-item.active {
            color: var(--accent);
            font-weight: bold;
        }

        @media (max-width: 768px) {
            .novels-grid {
                grid-template-columns: 1fr;
            }

            .search-row {
                grid-template-columns: 1fr;
            }

            .filter-row {
                grid-template-columns: 1fr;
            }

            .novel-stats {
                grid-template-columns: 1fr;
            }

            .results-info {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
        }
    </style>

    <script src="/public/js/app.js"></script>
</body>
</html>